.loading
  font-size 11px

  position fixed
  bottom 0
  left 0
  right 0
  z-index 99

  padding 3px 10px

  background rgba(0,0,0,0.1)

  &:after
    content: ''

    position absolute
    left 0
    top 0

    height 100%
    width 20px

    background linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0.5) 50%,rgba(255,255,255,0) 100%)

    animation loading 2s infinite linear;



@keyframes loading {
  0% {
    left 0
  }

  100% {
    left 100%
  }
}
