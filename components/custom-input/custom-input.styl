.custom-input
    &_type_text
        font 14px/40px 'Open Sans', sans-serif

        box-sizing border-box

        width 100%
        height 40px
        padding 0 10px

        border 1px solid #b7b6b6
        border-radius 6px

        box-shadow inset 3px 3px 5px rgba(0,0,0,0.05)

        transition border-color 0.2s ease-in


    &_type_text:focus
        border-color #448ccb


    &_type_button
        font bold 14px/40px 'Open Sans', sans-serif

        position relative

        display inline-block
        box-sizing border-box

        width 100%
        height 40px
        padding 0 10px

        border-radius 6px
        border 1px solid #999

        color #454545
        background linear-gradient(to bottom, #ebeae9 0%, #eae9e8 51%, #dfdedd 52%, #d6d5d3 100%)

        text-shadow 0 1px 1px rgba(255,255,255,1)

        cursor pointer

    &_type_button:after
        position absolute
        left 0
        top 0
        right 0
        bottom 0


        border-radius 5px
        border 1px solid transparent
        border-top-color rgba(255,255,255, 0.9)

        content ""

    &_type_button:focus
        border-color #448ccb

    &_type_button:hover
        border-color #0b4164

        color #fff
        background linear-gradient(to bottom, #98c6ef 0%, #76abd9 51%, #1e87b4 52%, #1e87b4 100%)

        text-shadow none

    &_type_button:active
        border-color #999
        box-shadow inset 0 3px 8px rgba(0,0,0, 0.4)

    &_type_button:hover:active
        border-color #0b4164
        box-shadow inset 0 3px 8px rgba(0,55,78, 0.8)

    &_type_button:active:after,
    &_type_button:hover:active:after
        display none


    &_action_submit
        border 1px solid #288300

        color #fff

        text-shadow none

        background linear-gradient(to bottom, #8ee264 0%, #5fb634 51%, #129a00 52%, #129a00 100%)

    &_action_submit:active
        border-color #288300

        box-shadow inset 0 3px 8px rgba(12,67,4, 0.8)


    &_type_checkbox
        position absolute
        width 1px
        height 1px
        visibility hidden

    &__label
        line-height 19px

        cursor pointer

    &__icon
        position relative
        overflow hidden

        display inline-block

        width 19px
        height 19px
        margin-top -3px

        vertical-align middle

        margin-right 10px
        background-image url('data:image/png;base64,')
        background-position 0 0

    &__label:hover &__icon
        background-position -19px 0

    &__label:active &__icon
        background-position -38px 0

    &_type_checkbox:checked + &__label &__icon
        background-position -57px 0

    &_type_checkbox:checked + &__label:hover &__icon
        background-position -76px 0

    &_type_checkbox:checked + &__label:active &__icon
        background-position -95px 0
